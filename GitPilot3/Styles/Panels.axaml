<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <!-- Card Panel Style -->
    <Style x:Key="CardPanelStyle" Selector="Border.Card">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- Elevated Card Style -->
    <Style x:Key="ElevatedCardStyle" Selector="Border.ElevatedCard">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <!-- Sidebar Panel Style -->
    <Style x:Key="SidebarPanelStyle" Selector="Border.Sidebar">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
    </Style>

    <!-- Header Panel Style -->
    <Style x:Key="HeaderPanelStyle" Selector="Border.Header">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- Footer Panel Style -->
    <Style x:Key="FooterPanelStyle" Selector="Border.Footer">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="32" />
    </Style>

    <!-- Toolbar Panel Style -->
    <Style x:Key="ToolbarPanelStyle" Selector="Border.Toolbar">
        <Setter Property="Background" Value="{StaticResource BackgroundQuaternaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Height" Value="40" />
    </Style>

    <!-- Content Panel Style -->
    <Style x:Key="ContentPanelStyle" Selector="Border.Content">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Section Panel Style -->
    <Style x:Key="SectionPanelStyle" Selector="Border.Section">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <!-- Dialog Panel Style -->
    <Style x:Key="DialogPanelStyle" Selector="Border.Dialog">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="MinWidth" Value="400" />
        <Setter Property="MaxWidth" Value="600" />
    </Style>

    <!-- Warning Panel Style -->
    <Style x:Key="WarningPanelStyle" Selector="Border.Warning">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#332A00" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}" />
        <Setter Property="BorderThickness" Value="1,1,1,3" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- Error Panel Style -->
    <Style x:Key="ErrorPanelStyle" Selector="Border.Error">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#330A0A" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
        <Setter Property="BorderThickness" Value="1,1,1,3" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- Success Panel Style -->
    <Style x:Key="SuccessPanelStyle" Selector="Border.Success">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#0A330A" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}" />
        <Setter Property="BorderThickness" Value="1,1,1,3" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- Info Panel Style -->
    <Style x:Key="InfoPanelStyle" Selector="Border.Info">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#0A1A33" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}" />
        <Setter Property="BorderThickness" Value="1,1,1,3" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- File Change Panel Styles -->
    <Style x:Key="FileAddedPanelStyle" Selector="Border.FileAdded">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#0F2F0F" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource GitAddedBrush}" />
        <Setter Property="BorderThickness" Value="2,0,0,0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="CornerRadius" Value="0,3,3,0" />
    </Style>

    <Style x:Key="FileModifiedPanelStyle" Selector="Border.FileModified">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#2F1F0F" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource GitModifiedBrush}" />
        <Setter Property="BorderThickness" Value="2,0,0,0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="CornerRadius" Value="0,3,3,0" />
    </Style>

    <Style x:Key="FileDeletedPanelStyle" Selector="Border.FileDeleted">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#2F0F0F" />
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource GitDeletedBrush}" />
        <Setter Property="BorderThickness" Value="2,0,0,0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="CornerRadius" Value="0,3,3,0" />
    </Style>

    <!-- Splitter Style -->
    <Style x:Key="SplitterStyle" Selector="GridSplitter">
        <Setter Property="Background" Value="{StaticResource BorderBrush}" />
    </Style>

    <Style x:Key="SplitterHoverStyle" Selector="GridSplitter:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- List Container Styles -->
    <Style x:Key="ListContainerStyle" Selector="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="TreeContainerStyle" Selector="TreeView">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>