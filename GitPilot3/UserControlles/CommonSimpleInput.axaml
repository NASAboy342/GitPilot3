<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="500" Height="100"
             x:Class="GitPilot3.UserControlles.CommonSimpleInput">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row = "0" Orientation="Vertical" Margin="10 10 10 0" Spacing="20" >
      <TextBox x:Name="InputTextBox" Watermark="Input something..." Height="40" HorizontalAlignment="Stretch" TextChanged="OnTextChanged"/>
    </StackPanel>
    <StackPanel Grid.Row = "1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Spacing="10" >
      <Button Width="100" Click="OnCancelClick" VerticalAlignment="Center"> <TextBlock Text="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center"/></Button>
      <Button Width="100" Click="OnOkClick" VerticalAlignment="Center"> <TextBlock Text="OK" HorizontalAlignment="Center" VerticalAlignment="Center"/></Button>
    </StackPanel>
</Grid>
</UserControl>

