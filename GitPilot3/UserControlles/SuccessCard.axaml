<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="GitPilot3.UserControlles.SuccessCard">  
  <Border Background="rgba(0, 255, 106, 0.24)" Padding="10" CornerRadius="10">
      <Grid>
          <Grid.RowDefinitions>
              <RowDefinition MinHeight="50"/>
              <RowDefinition Height="25"/>
          </Grid.RowDefinitions>
          <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
              <Border Width="40" Height="40" CornerRadius="20" Background="Green"> <TextBlock Text="âœ“" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/> </Border>
              <TextBlock x:Name="SuccessTitleTextBlock" Classes="H6" Text="Success Title" Foreground="White" Margin="10,0" VerticalAlignment="Center" TextWrapping="Wrap"/>
          </StackPanel>
          <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
              <Button x:Name="SuccessCloseButton" Width="75" Height="25" Click="OnClickCloseSuccessCard">
                  <TextBlock Text="Close" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Button>
          </StackPanel>
      </Grid>
  </Border>
</UserControl>
