<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Git File Status Styles -->
    <Style x:Key="GitFileAddedStyle" Selector="TextBlock.GitAdded">
        <Setter Property="Foreground" Value="{StaticResource GitAddedBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="GitFileModifiedStyle" Selector="TextBlock.GitModified">
        <Setter Property="Foreground" Value="{StaticResource GitModifiedBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="GitFileDeletedStyle" Selector="TextBlock.GitDeleted">
        <Setter Property="Foreground" Value="{StaticResource GitDeletedBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="GitFileUntrackedStyle" Selector="TextBlock.GitUntracked">
        <Setter Property="Foreground" Value="{StaticResource GitUntrackedBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="GitFileConflictStyle" Selector="TextBlock.GitConflict">
        <Setter Property="Foreground" Value="{StaticResource GitConflictBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="GitFileIgnoredStyle" Selector="TextBlock.GitIgnored">
        <Setter Property="Foreground" Value="{StaticResource GitIgnoredBrush}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- Branch Indicator Styles -->
    <Style x:Key="BranchLocalStyle" Selector="TextBlock.BranchLocal">
        <Setter Property="Foreground" Value="{StaticResource BranchLocalBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="BranchRemoteStyle" Selector="TextBlock.BranchRemote">
        <Setter Property="Foreground" Value="{StaticResource BranchRemoteBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="BranchCurrentStyle" Selector="TextBlock.BranchCurrent">
        <Setter Property="Foreground" Value="{StaticResource BranchCurrentBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="BranchMergedStyle" Selector="TextBlock.BranchMerged">
        <Setter Property="Foreground" Value="{StaticResource BranchMergedBrush}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- Commit Graph Node Styles -->
    <Style x:Key="CommitNodeStyle" Selector="Ellipse.CommitNode">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stroke" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style x:Key="CommitNodeLocalStyle" Selector="Ellipse.CommitNodeLocal">
        <Setter Property="Fill" Value="{StaticResource BranchLocalBrush}" />
        <Setter Property="Stroke" Value="{StaticResource BranchLocalBrush}" />
    </Style>

    <Style x:Key="CommitNodeRemoteStyle" Selector="Ellipse.CommitNodeRemote">
        <Setter Property="Fill" Value="{StaticResource BranchRemoteBrush}" />
        <Setter Property="Stroke" Value="{StaticResource BranchRemoteBrush}" />
    </Style>

    <Style x:Key="CommitNodeCurrentStyle" Selector="Ellipse.CommitNodeCurrent">
        <Setter Property="Fill" Value="{StaticResource BranchCurrentBrush}" />
        <Setter Property="Stroke" Value="{StaticResource BranchCurrentBrush}" />
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
        <Setter Property="StrokeThickness" Value="3" />
    </Style>

    <!-- Branch Line Styles -->
    <Style x:Key="BranchLineStyle" Selector="Line.BranchLine">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stroke" Value="{StaticResource BorderLightBrush}" />
    </Style>

    <Style x:Key="BranchLineLocalStyle" Selector="Line.BranchLineLocal">
        <Setter Property="Stroke" Value="{StaticResource BranchLocalBrush}" />
        <Setter Property="StrokeThickness" Value="3" />
    </Style>

    <Style x:Key="BranchLineRemoteStyle" Selector="Line.BranchLineRemote">
        <Setter Property="Stroke" Value="{StaticResource BranchRemoteBrush}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeDashArray" Value="5,3" />
    </Style>

    <Style x:Key="BranchLineCurrentStyle" Selector="Line.BranchLineCurrent">
        <Setter Property="Stroke" Value="{StaticResource BranchCurrentBrush}" />
        <Setter Property="StrokeThickness" Value="4" />
    </Style>

    <!-- Diff Indication Styles -->
    <Style x:Key="DiffAddedLineStyle" Selector="TextBlock.DiffAdded">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#0D4D0D" />
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource GitAddedBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="Padding" Value="4,1" />
    </Style>

    <Style x:Key="DiffDeletedLineStyle" Selector="TextBlock.DiffDeleted">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#4D0D0D" />
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource GitDeletedBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="Padding" Value="4,1" />
    </Style>

    <Style x:Key="DiffContextLineStyle" Selector="TextBlock.DiffContext">
        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="Padding" Value="4,1" />
    </Style>

    <!-- Status Badge Styles -->
    <Style x:Key="StatusBadgeStyle" Selector="Border.StatusBadge">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="MinWidth" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="StatusBadgeSuccessStyle" Selector="Border.StatusBadgeSuccess">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}" />
    </Style>

    <Style x:Key="StatusBadgeWarningStyle" Selector="Border.StatusBadgeWarning">
        <Setter Property="Background" Value="{StaticResource WarningBrush}" />
    </Style>

    <Style x:Key="StatusBadgeErrorStyle" Selector="Border.StatusBadgeError">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}" />
    </Style>

    <Style x:Key="StatusBadgeInfoStyle" Selector="Border.StatusBadgeInfo">
        <Setter Property="Background" Value="{StaticResource InfoBrush}" />
    </Style>

    <!-- Sync Status Indicators -->
    <Style x:Key="SyncAheadStyle" Selector="TextBlock.SyncAhead">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
    </Style>

    <Style x:Key="SyncBehindStyle" Selector="TextBlock.SyncBehind">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
    </Style>

    <Style x:Key="SyncUpToDateStyle" Selector="TextBlock.SyncUpToDate">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <!-- Tag Styles -->
    <Style x:Key="TagStyle" Selector="Border.Tag">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SecondaryDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style x:Key="TagTextStyle" Selector="TextBlock.TagText">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <!-- Stash Styles -->
    <Style x:Key="StashItemStyle" Selector="Border.StashItem">
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1,0,0,0" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="1" />
    </Style>

    <!-- Conflict Resolution Styles -->
    <Style x:Key="ConflictMarkerStyle" Selector="TextBlock.ConflictMarker">
        <Setter Property="Background" Value="{StaticResource GitConflictBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

    <!-- Progress and Loading Styles -->
    <Style x:Key="ProgressTextStyle" Selector="TextBlock.Progress">
        <Setter Property="Foreground" Value="{StaticResource InfoBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- File Type Icon Styles (placeholder for future icon implementation) -->
    <Style x:Key="FileIconStyle" Selector="TextBlock.FileIcon">
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}" />
        <Setter Property="Margin" Value="0,0,8,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Repository Status Overview Styles -->
    <Style x:Key="RepoStatusCleanStyle" Selector="TextBlock.RepoStatusClean">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="RepoStatusDirtyStyle" Selector="TextBlock.RepoStatusDirty">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="RepoStatusConflictStyle" Selector="TextBlock.RepoStatusConflict">
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

</ResourceDictionary>