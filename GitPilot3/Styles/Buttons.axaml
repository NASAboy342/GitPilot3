<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Button Style -->
    <Style x:Key="BaseButtonStyle" Selector="Button">
        <Setter Property="FontFamily" Value="Inter, Segoe UI, Arial, sans-serif" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <ColorTransition Property="Background" Duration="0:0:0.15" />
                <ColorTransition Property="BorderBrush" Duration="0:0:0.15" />
            </Transitions>
        </Setter>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" Selector="Button.Primary">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarkBrush}" />
    </Style>

    <Style x:Key="PrimaryButtonHoverStyle" Selector="Button.Primary:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}" />
    </Style>

    <Style x:Key="PrimaryButtonPressedStyle" Selector="Button.Primary:pressed">
        <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}" />
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" Selector="Button.Secondary">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <Style x:Key="SecondaryButtonHoverStyle" Selector="Button.Secondary:pointerover">
        <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
    </Style>

    <Style x:Key="SecondaryButtonPressedStyle" Selector="Button.Secondary:pressed">
        <Setter Property="Background" Value="{StaticResource SurfacePressedBrush}" />
    </Style>

    <!-- Success Button Style -->
    <Style x:Key="SuccessButtonStyle" Selector="Button.Success">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SuccessDarkBrush}" />
    </Style>

    <Style x:Key="SuccessButtonHoverStyle" Selector="Button.Success:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource SuccessLightColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Warning Button Style -->
    <Style x:Key="WarningButtonStyle" Selector="Button.Warning">
        <Setter Property="Background" Value="{StaticResource WarningBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource WarningDarkBrush}" />
    </Style>

    <Style x:Key="WarningButtonHoverStyle" Selector="Button.Warning:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource WarningLightColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Error Button Style -->
    <Style x:Key="ErrorButtonStyle" Selector="Button.Error">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ErrorDarkBrush}" />
    </Style>

    <Style x:Key="ErrorButtonHoverStyle" Selector="Button.Error:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource ErrorLightColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost/Outline Button Style -->
    <Style x:Key="GhostButtonStyle" Selector="Button.Ghost">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <Style x:Key="GhostButtonHoverStyle" Selector="Button.Ghost:pointerover">
        <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Icon Button Style -->
    <Style x:Key="IconButtonStyle" Selector="Button.Icon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
    </Style>

    <Style x:Key="IconButtonHoverStyle" Selector="Button.Icon:pointerover">
        <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Toolbar Button Style -->
    <Style x:Key="ToolbarButtonStyle" Selector="Button.Toolbar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style x:Key="ToolbarButtonHoverStyle" Selector="Button.Toolbar:pointerover">
        <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Small Button Style -->
    <Style x:Key="SmallButtonStyle" Selector="Button.Small">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="24" />
    </Style>

    <!-- Large Button Style -->
    <Style x:Key="LargeButtonStyle" Selector="Button.Large">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinHeight" Value="40" />
    </Style>

    <!-- Disabled Button Style -->
    <Style x:Key="DisabledButtonStyle" Selector="Button:disabled">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>

</ResourceDictionary>