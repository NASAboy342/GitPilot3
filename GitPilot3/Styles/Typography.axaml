<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Typography Settings -->
    <FontFamily x:Key="DefaultFontFamily">Inter, Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">JetBrains Mono, Consolas, Courier New, monospace</FontFamily>
    <FontFamily x:Key="HeadingFontFamily">Inter, Segoe UI, Arial, sans-serif</FontFamily>

    <!-- Font Sizes -->
    <x:Double x:Key="FontSizeXS">10</x:Double>
    <x:Double x:Key="FontSizeS">11</x:Double>
    <x:Double x:Key="FontSizeBase">13</x:Double>
    <x:Double x:Key="FontSizeM">14</x:Double>
    <x:Double x:Key="FontSizeL">16</x:Double>
    <x:Double x:Key="FontSizeXL">18</x:Double>
    <x:Double x:Key="FontSizeXXL">20</x:Double>
    <x:Double x:Key="FontSize3XL">24</x:Double>
    <x:Double x:Key="FontSize4XL">32</x:Double>

    <!-- Line Heights -->
    <x:Double x:Key="LineHeightTight">1.2</x:Double>
    <x:Double x:Key="LineHeightNormal">1.4</x:Double>
    <x:Double x:Key="LineHeightRelaxed">1.6</x:Double>

    <!-- Heading Styles -->
    <Style x:Key="H1Style" Selector="TextBlock.H1">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize4XL}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style x:Key="H2Style" Selector="TextBlock.H2">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize3XL}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style x:Key="H3Style" Selector="TextBlock.H3">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXL}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="H4Style" Selector="TextBlock.H4">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXL}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>

    <Style x:Key="H5Style" Selector="TextBlock.H5">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style x:Key="H6Style" Selector="TextBlock.H6">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Body Text Styles -->
    <Style x:Key="BodyLargeStyle" Selector="TextBlock.BodyLarge">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightNormal}" />
    </Style>

    <Style x:Key="BodyStyle" Selector="TextBlock.Body">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightNormal}" />
    </Style>

    <Style x:Key="BodySmallStyle" Selector="TextBlock.BodySmall">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightNormal}" />
    </Style>

    <!-- Caption and Label Styles -->
    <Style x:Key="CaptionStyle" Selector="TextBlock.Caption">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightTight}" />
    </Style>

    <Style x:Key="LabelStyle" Selector="TextBlock.Label">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <!-- Code and Monospace Styles -->
    <Style x:Key="CodeInlineStyle" Selector="TextBlock.CodeInline">
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
        <Setter Property="Padding" Value="2,1" />
    </Style>

    <Style x:Key="CodeBlockStyle" Selector="TextBlock.CodeBlock">
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightRelaxed}" />
    </Style>

    <!-- Specialized Text Styles -->
    <Style x:Key="CommitMessageStyle" Selector="TextBlock.CommitMessage">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeightNormal}" />
    </Style>

    <Style x:Key="CommitHashStyle" Selector="TextBlock.CommitHash">
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

    <Style x:Key="BranchNameStyle" Selector="TextBlock.BranchName">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource BranchCurrentBrush}" />
    </Style>

    <Style x:Key="FilePathStyle" Selector="TextBlock.FilePath">
        <Setter Property="FontFamily" Value="{StaticResource MonospaceFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style x:Key="AuthorNameStyle" Selector="TextBlock.AuthorName">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <Style x:Key="TimestampStyle" Selector="TextBlock.Timestamp">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

    <!-- Status and Badge Text Styles -->
    <Style x:Key="StatusTextStyle" Selector="TextBlock.Status">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="BadgeTextStyle" Selector="TextBlock.Badge">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Link Style -->
    <Style x:Key="LinkTextStyle" Selector="TextBlock.Link">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="LinkHoverStyle" Selector="TextBlock.Link:pointerover">
        <Setter Property="Foreground" Value="{StaticResource PrimaryLightBrush}" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>

    <!-- Error and Warning Text Styles -->
    <Style x:Key="ErrorTextStyle" Selector="TextBlock.ErrorText">
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="WarningTextStyle" Selector="TextBlock.WarningText">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="SuccessTextStyle" Selector="TextBlock.SuccessText">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

</ResourceDictionary>