<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GitPilot3.UserControlles.ProfileMenagement">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Margin="10" Spacing="20">
      <ComboBox x:Name="ProfileComboBox" Height="50" HorizontalAlignment="Stretch">
      </ComboBox>
      <TextBlock Text="Authoring commits as:" FontWeight="Bold" FontSize="20"/>
      <TextBlock x:Name="NameTextBlock" Text="Name: "/>
      <TextBlock x:Name="EmailTextBlock" Text="Email: "/>
    </StackPanel>
    <Button Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10, 10" Click="OnClickEditAccount">
      <TextBlock Text="Edit" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Button>
    <Button Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10, 10" Click="OnClickAddAccount">
      <TextBlock Text="Add Account" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Button>
  </Grid>
</UserControl>
