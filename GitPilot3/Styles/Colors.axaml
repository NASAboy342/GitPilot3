<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- GitPilot3 Color Palette -->
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="PrimaryLightColor">#64B5F6</Color>
    <Color x:Key="PrimaryDarkColor">#1976D2</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#FF9800</Color>
    <Color x:Key="SecondaryLightColor">#FFB74D</Color>
    <Color x:Key="SecondaryDarkColor">#F57C00</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#1E1E1E</Color>
    <Color x:Key="BackgroundSecondary">#252525</Color>
    <Color x:Key="BackgroundTertiary">#2D2D2D</Color>
    <Color x:Key="BackgroundQuaternary">#3C3C3C</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="SurfaceColor">#2D2D2D</Color>
    <Color x:Key="SurfaceHoverColor">#404040</Color>
    <Color x:Key="SurfaceActiveColor">#505050</Color>
    <Color x:Key="SurfacePressedColor">#303030</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="BorderLightColor">#606060</Color>
    <Color x:Key="BorderDarkColor">#2A2A2A</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#E0E0E0</Color>
    <Color x:Key="TextTertiaryColor">#C0C0C0</Color>
    <Color x:Key="TextDisabledColor">#808080</Color>
    <Color x:Key="TextMutedColor">#A0A0A0</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="SuccessLightColor">#81C784</Color>
    <Color x:Key="SuccessDarkColor">#388E3C</Color>
    
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="WarningLightColor">#FFB74D</Color>
    <Color x:Key="WarningDarkColor">#F57C00</Color>
    
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="ErrorLightColor">#E57373</Color>
    <Color x:Key="ErrorDarkColor">#D32F2F</Color>
    
    <Color x:Key="InfoColor">#2196F3</Color>
    <Color x:Key="InfoLightColor">#64B5F6</Color>
    <Color x:Key="InfoDarkColor">#1976D2</Color>
    
    <!-- Git Semantic Colors -->
    <Color x:Key="GitAddedColor">#4CAF50</Color>
    <Color x:Key="GitModifiedColor">#FF9800</Color>
    <Color x:Key="GitDeletedColor">#F44336</Color>
    <Color x:Key="GitUntrackedColor">#9C27B0</Color>
    <Color x:Key="GitConflictColor">#E91E63</Color>
    <Color x:Key="GitIgnoredColor">#757575</Color>
    
    <!-- Branch Colors -->
    <Color x:Key="BranchLocalColor">#4CAF50</Color>
    <Color x:Key="BranchRemoteColor">#FF9800</Color>
    <Color x:Key="BranchCurrentColor">#2196F3</Color>
    <Color x:Key="BranchMergedColor">#9E9E9E</Color>
    
    <!-- Brushes for easier usage -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}" />
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}" />
    
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiary}" />
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="{StaticResource BackgroundQuaternary}" />
    
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}" />
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}" />
    <SolidColorBrush x:Key="SurfacePressedBrush" Color="{StaticResource SurfacePressedColor}" />
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}" />
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />
    
    <SolidColorBrush x:Key="GitAddedBrush" Color="{StaticResource GitAddedColor}" />
    <SolidColorBrush x:Key="GitModifiedBrush" Color="{StaticResource GitModifiedColor}" />
    <SolidColorBrush x:Key="GitDeletedBrush" Color="{StaticResource GitDeletedColor}" />
    <SolidColorBrush x:Key="GitUntrackedBrush" Color="{StaticResource GitUntrackedColor}" />
    <SolidColorBrush x:Key="GitConflictBrush" Color="{StaticResource GitConflictColor}" />
    <SolidColorBrush x:Key="GitIgnoredBrush" Color="{StaticResource GitIgnoredColor}" />
    
    <SolidColorBrush x:Key="BranchLocalBrush" Color="{StaticResource BranchLocalColor}" />
    <SolidColorBrush x:Key="BranchRemoteBrush" Color="{StaticResource BranchRemoteColor}" />
    <SolidColorBrush x:Key="BranchCurrentBrush" Color="{StaticResource BranchCurrentColor}" />
    <SolidColorBrush x:Key="BranchMergedBrush" Color="{StaticResource BranchMergedColor}" />

</ResourceDictionary>