<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <!-- TextBox Style -->
    <Style x:Key="TextBoxStyle" Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="SelectionForegroundBrush" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style x:Key="TextBoxFocusedStyle" Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}" />
    </Style>

    <Style x:Key="TextBoxDisabledStyle" Selector="TextBox:disabled">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}" />
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="ComboBoxStyle" Selector="ComboBox">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,6" />
    </Style>

    <Style x:Key="ComboBoxFocusedStyle" Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- CheckBox Style -->
    <Style x:Key="CheckBoxStyle" Selector="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="6,0,0,0" />
    </Style>

    <!-- RadioButton Style -->
    <Style x:Key="RadioButtonStyle" Selector="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="6,0,0,0" />
    </Style>

    <!-- NumericUpDown Style -->
    <Style x:Key="NumericUpDownStyle" Selector="NumericUpDown">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- Slider Style -->
    <Style x:Key="SliderStyle" Selector="Slider">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Search TextBox Style -->
    <Style x:Key="SearchTextBoxStyle" Selector="TextBox.Search">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Watermark" Value="Search..." />
    </Style>

    <!-- Code TextBox Style (for commit messages, etc.) -->
    <Style x:Key="CodeTextBoxStyle" Selector="TextBox.Code">
        <Setter Property="FontFamily" Value="JetBrains Mono, Consolas, Courier New, monospace" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Validation Error Style -->
    <Style x:Key="ValidationErrorStyle" Selector="TextBox.Error">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
    </Style>

    <Style x:Key="ValidationErrorFocusStyle" Selector="TextBox.Error:focus">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
    </Style>

    <!-- Success Validation Style -->
    <Style x:Key="ValidationSuccessStyle" Selector="TextBox.Success">
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}" />
    </Style>

    <!-- Large Input Style -->
    <Style x:Key="LargeInputStyle" Selector="TextBox.Large">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinHeight" Value="40" />
    </Style>

    <!-- Small Input Style -->
    <Style x:Key="SmallInputStyle" Selector="TextBox.Small">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="MinHeight" Value="24" />
    </Style>

</ResourceDictionary>